<Application x:Class="AstralNovastrom.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AstralNovastrom"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design 3 基础资源 -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes;component/Themes/MaterialDesign3.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes;component/Themes/MaterialDesign3.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Blue.xaml" />
                <!-- 项目基础资源 -->
                <ResourceDictionary Source="Resources/Styles/MaterialDesign3Override.xaml" />
                <!-- 自定义资源 -->
                <ResourceDictionary Source="Resources/Styles/CyberStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Animations.xaml" />
                <ResourceDictionary Source="Resources/Brushes/QuantumBrushes.xaml" />
                <ResourceDictionary Source="Resources/Brushes/HoloBrushes.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>