<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <!-- 量子渐变画刷 -->
  <LinearGradientBrush x:Key="QuantumGradientBrush" StartPoint="0,0" EndPoint="1,1">
    <GradientStop Color="#FF00C6FF" Offset="0"/>
    <GradientStop Color="#FF9D00FF" Offset="0.5"/>
    <GradientStop Color="#FF00FFAA" Offset="1"/>
  </LinearGradientBrush>
  
  <!-- 全息效果 -->
  <LinearGradientBrush x:Key="HoloGradientBrush" StartPoint="0,0" EndPoint="1,0">
    <GradientStop Color="#2000C6FF" Offset="0"/>
    <GradientStop Color="#409D00FF" Offset="0.5"/>
    <GradientStop Color="#2000C6FF" Offset="1"/>
  </LinearGradientBrush>
  
  <!-- 效率渐变 -->
  <LinearGradientBrush x:Key="EfficiencyGradientBrush" StartPoint="0,0" EndPoint="1,0">
    <GradientStop Color="#FF00FF88" Offset="0"/>
    <GradientStop Color="#FFFFFF00" Offset="0.7"/>
    <GradientStop Color="#FFFF0000" Offset="1"/>
  </LinearGradientBrush>
  
</ResourceDictionary>