<UserControl x:Class="AstralNovastrom.Controls.FireCoreProcessorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:AstralNovastrom.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="800">
    <Border Style="{StaticResource ElevatedCard}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题 -->
            <Border Grid.Row="0" 
                    Padding="20,16,20,12"
                    BorderBrush="{StaticResource OutlineVariant}"
                    BorderThickness="0,0,0,1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Computer" 
                                                 Width="20" Height="20"
                                                 Foreground="{StaticResource OnPrimaryContainer}"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Text="火核处理器监控" 
                                   FontSize="16" FontWeight="Bold"
                                   Foreground="{StaticResource OnSurface}"/>
                    </StackPanel>
                    <TextBlock Text="系统事件与安全审计" 
                               Style="{StaticResource ValueLabel}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- 日志内容 -->
            <Border Grid.Row="1" 
                    Background="{StaticResource SurfaceVariant}"
                    CornerRadius="{Binding Source={StaticResource Large}, Converter={StaticResource BottomCornersConverter}}"
                    Padding="12">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <ToggleButton Style="{StaticResource OutlinedToggleButton}" 
                                  Content="Info"
                                  Padding="8,4"
                                  IsChecked="True"/>
                    <ToggleButton Style="{StaticResource OutlinedToggleButton}" 
                                  Content="Warn"
                                  Padding="8,4"
                                  Margin="8,0"
                                  IsChecked="True"/>
                    <ToggleButton Style="{StaticResource OutlinedToggleButton}" 
                                  Content="Critical"
                                  Padding="8,4"
                                  IsChecked="True"/>
                </StackPanel>
            </Border>

            <!-- 控制栏 -->
            <Border Grid.Row="2" 
                    BorderBrush="{StaticResource OutlineVariant}"
                    BorderThickness="0,1,0,0"
                    Padding="20,12">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <ToggleButton Style="{StaticResource OutlinedToggleButton}" 
                                  Padding="12,6"
                                  Content="自动滚动"
                                  IsChecked="True"/>
                    <Button Style="{StaticResource OutlinedButton}" 
                            Padding="12,6"
                            Content="导出"
                            Margin="8,0,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>