<UserControl x:Class="AstralNovastrom.Controls.ConfigurationPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:AstralNovastrom.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="800">
    <Border Style="{StaticResource MaterialCard}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 配置标题 -->
            <Border Grid.Row="0" 
                    Padding="20,16,20,12"
                    BorderBrush="{StaticResource OutlineVariant}"
                    BorderThickness="0,0,0,1">
                <StackPanel>
                    <TextBlock Text="量子提取协议" 
                               FontSize="16" FontWeight="Bold"
                               Foreground="{StaticResource OnSurface}"/>
                    <TextBlock Text="霜影核能提取参数配置" 
                               Style="{StaticResource ValueLabel}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- 配置内容 -->
            <ScrollViewer Grid.Row="1" Padding="20">
                <StackPanel>
                    <!-- 提取控制 -->
                    <Border Style="{StaticResource DataCard}" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="提取控制" 
                                       Style="{StaticResource ValueLabel}"
                                       Margin="0,0,0,12"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" 
                                        Style="{StaticResource MaterialSlider}"
                                        Minimum="0" Maximum="100" Value="87.2"/>
                                <TextBlock Grid.Column="1" 
                                           Text="87.2%" 
                                           Style="{StaticResource ValueDisplay}"
                                           Margin="12,0,0,0"/>
                            </Grid>
                            <ProgressBar Style="{StaticResource QuantumProgressBar}" 
                                         Value="87.2" Maximum="100"
                                         Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- 安全协议 -->
                    <Border Style="{StaticResource DataCard}" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="安全协议" 
                                       Style="{StaticResource ValueLabel}"
                                       Margin="0,0,0,12"/>
                            <StackPanel>
                                <CheckBox Content="自动超载保护" 
                                          Foreground="{StaticResource OnSurface}"
                                          IsChecked="True"
                                          Margin="0,4"/>
                                <CheckBox Content="量子入侵检测" 
                                          Foreground="{StaticResource OnSurface}"
                                          IsChecked="True"
                                          Margin="0,4"/>
                                <CheckBox Content="实时威胁分析" 
                                          Foreground="{StaticResource OnSurface}"
                                          IsChecked="True"
                                          Margin="0,4"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Hacks 框架 -->
                    <Border Style="{StaticResource DataCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" 
                                        Margin="0,0,0,12">
                                <TextBlock Text="量子脚本框架" 
                                           Style="{StaticResource ValueLabel}"/>
                                <Border Style="{StaticResource Chip}" 
                                        Margin="8,0,0,0">
                                    <TextBlock Text="高级模式" 
                                               FontSize="10"/>
                                </Border>
                            </StackPanel>
                            <TextBox materialDesign:HintAssist.Hint="输入量子脚本..."
                                     FontFamily="{StaticResource DisplayFont}"
                                     FontSize="12"
                                     AcceptsReturn="True"
                                     MinHeight="80"
                                     BorderBrush="{StaticResource Outline}"
                                     Background="Transparent"
                                     Foreground="{StaticResource OnSurface}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>