<UserControl x:Class="AstralNovastrom.Controls.SystemMonitoringControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:AstralNovastrom.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Border Style="{StaticResource MaterialCard}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 监控标题 -->
            <Border Grid.Row="0" 
                    Padding="20,16,20,12"
                    BorderBrush="{StaticResource OutlineVariant}"
                    BorderThickness="0,0,0,1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Computer" 
                                                 Width="20" Height="20"
                                                 Foreground="{StaticResource OnPrimaryContainer}"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Text="火核处理器监控" 
                                   FontSize="16" FontWeight="Bold"
                                   Foreground="{StaticResource OnSurface}"/>
                    </StackPanel>
                    <TextBlock Text="量子计算核心实时状态" 
                               Style="{StaticResource ValueLabel}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- 监控数据 -->
            <Grid Grid.Row="1" Margin="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 效率显示 -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource TertiaryContainer}"
                            CornerRadius="{StaticResource Medium}"
                            Padding="16"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="操作效率" 
                                       Style="{StaticResource ValueLabel}"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="87.2%" 
                                           Style="{StaticResource ValueDisplay}"/>
                                <Border Style="{StaticResource Chip}" 
                                        Margin="12,0,0,0">
                                    <TextBlock Text="优化中" 
                                               Foreground="{StaticResource OnTertiaryContainer}"
                                               FontSize="10"/>
                                </Border>
                            </StackPanel>
                            <ProgressBar Style="{StaticResource QuantumProgressBar}" 
                                         Value="87.2" Maximum="100"
                                         Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- 详细指标 -->
                    <WrapPanel Grid.Row="1" Orientation="Horizontal">
                        <!-- 处理器负载 -->
                        <Border Style="{StaticResource DataCard}" 
                                Width="120" Margin="0,0,8,8">
                            <StackPanel>
                                <TextBlock Text="负载" 
                                           Style="{StaticResource ValueLabel}"/>
                                <TextBlock Text="47%" 
                                           Style="{StaticResource ValueDisplay}"
                                           Margin="0,4,0,0"/>
                                <ProgressBar Value="47" Maximum="100"
                                             Height="4"
                                             Margin="0,8,0,0"
                                             Background="Transparent">
                                    <ProgressBar.Foreground>
                                        <LinearGradientBrush>
                                            <GradientStop Color="#FF00FF88" Offset="0"/>
                                            <GradientStop Color="#FFFFFF00" Offset="0.7"/>
                                            <GradientStop Color="#FFFF0000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </ProgressBar.Foreground>
                                </ProgressBar>
                            </StackPanel>
                        </Border>

                        <!-- 温度 -->
                        <Border Style="{StaticResource DataCard}" 
                                Width="120" Margin="0,0,8,8">
                            <StackPanel>
                                <TextBlock Text="温度" 
                                           Style="{StaticResource ValueLabel}"/>
                                <TextBlock Text="42°C" 
                                           Style="{StaticResource ValueDisplay}"
                                           Margin="0,4,0,0"/>
                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,8,0,0">
                                    <Ellipse Width="8" Height="8" 
                                             Fill="#FF00FF88"
                                             Margin="0,0,4,0"/>
                                    <TextBlock Text="正常" 
                                               Style="{StaticResource ValueLabel}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </WrapPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>