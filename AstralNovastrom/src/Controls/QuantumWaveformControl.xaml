<UserControl x:Class="AstralNovastrom.src.Controls.QuantumWaveformControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="300">
    <Grid Background="#1A1A1A">
        <TextBlock Text="WarpParticleReactionDevice" 
                   FontSize="14" FontWeight="Bold" 
                   Foreground="#FFFFFF" 
                   Margin="10,10,0,0"/>
        
        <!-- 温度、压力等指标 -->
        <Grid Margin="10,40,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <!-- 温度圆形进度条-->
            <Grid Grid.Column="0" Grid.Row="0">
                <Ellipse Width="60" Height="60" Fill="#2A2A2A" Stroke="#404040" StrokeThickness="2" Margin="10"/>
                <Path Data="M30,10 A20,20 0 0,1 50,30 A20,20 0 0,1 30,50 A20,20 0 0,1 10,30 A20,20 0 0,1 30,10" 
                      Stroke="#00FF00" StrokeThickness="3" Fill="Transparent" Margin="10"/>
                <TextBlock Text="0°C" Foreground="#00FF00" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <!-- 压力圆形进度条-->
            <Grid Grid.Column="1" Grid.Row="0">
                <Ellipse Width="60" Height="60" Fill="#2A2A2A" Stroke="#404040" StrokeThickness="2" Margin="10"/>
                <Path Data="M30,10 A20,20 0 0,1 50,30 A20,20 0 0,1 30,50 A20,20 0 0,1 10,30 A20,20 0 0,1 30,10" 
                      Stroke="#00FF00" StrokeThickness="3" Fill="Transparent" Margin="10"/>
                <TextBlock Text="0 Pa" Foreground="#00FF00" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <!-- 稳定值圆形进度条 -->
            <Grid Grid.Column="2" Grid.Row="0">
                <Ellipse Width="60" Height="60" Fill="#2A2A2A" Stroke="#404040" StrokeThickness="2" Margin="10"/>
                <Path Data="M30,10 A20,20 0 0,1 50,30 A20,20 0 0,1 30,50 A20,20 0 0,1 10,30 A20,20 0 0,1 30,10" 
                      Stroke="#00FF00" StrokeThickness="3" Fill="Transparent" Margin="10"/>
                <TextBlock Text="0%" Foreground="#00FF00" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <!-- 阴影能量圆形进度条-->
            <Grid Grid.Column="3" Grid.Row="0">
                <Ellipse Width="60" Height="60" Fill="#2A2A2A" Stroke="#404040" StrokeThickness="2" Margin="10"/>
                <Path Data="M30,10 A20,20 0 0,1 50,30 A20,20 0 0,1 30,50 A20,20 0 0,1 10,30 A20,20 0 0,1 30,10" 
                      Stroke="#00FF00" StrokeThickness="3" Fill="Transparent" Margin="10"/>
                <TextBlock Text="0 kg" Foreground="#00FF00" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <!-- 标签 -->
            <TextBlock Text="Temperature" Foreground="#FFFFFF" FontSize="10" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center"/>
            <TextBlock Text="Pressure" Foreground="#FFFFFF" FontSize="10" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center"/>
            <TextBlock Text="StableValue" Foreground="#FFFFFF" FontSize="10" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center"/>
            <TextBlock Text="ShadowEnergy" Foreground="#FFFFFF" FontSize="10" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Center"/>
        </Grid>

        <!-- 状态指示灯 -->
        <Grid Margin="10,140,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <TextBlock Text="RestartStatus:" Foreground="#FFFFFF" Grid.Column="0" Grid.Row="0"/>
            <Ellipse Width="10" Height="10" Fill="#00FF00" Grid.Column="1" Grid.Row="0" Margin="0,5,0,0"/>
            
            <TextBlock Text="PressureWarning:" Foreground="#FFFFFF" Grid.Column="0" Grid.Row="1"/>
            <Ellipse Width="10" Height="10" Fill="#00FF00" Grid.Column="1" Grid.Row="1" Margin="0,5,0,0"/>
            
            <TextBlock Text="TemperatureWarning:" Foreground="#FFFFFF" Grid.Column="0" Grid.Row="2"/>
            <Ellipse Width="10" Height="10" Fill="#00FF00" Grid.Column="1" Grid.Row="2" Margin="0,5,0,0"/>
            
            <TextBlock Text="EnergyOverflowWarning:" Foreground="#FFFFFF" Grid.Column="0" Grid.Row="3"/>
            <Ellipse Width="10" Height="10" Fill="#00FF00" Grid.Column="1" Grid.Row="3" Margin="0,5,0,0"/>
        </Grid>

        <!-- 反应器曲线图表区�?-->
        <Grid Margin="10,240,10,10" Background="#2A2A2A">
            <TextBlock Text="This area is used to display the reactor curve chart" 
                       Foreground="#FF6666" 
                       TextWrapping="Wrap" 
                       Margin="10"/>
        </Grid>
    </Grid>
</UserControl>
