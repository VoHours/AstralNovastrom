<UserControl x:Class="AstralNovastrom.src.Controls.SystemLogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="400">
    <Border Style="{StaticResource MaterialCard}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 日志标题 -->
            <Border Grid.Row="0" 
                    Padding="20,16,20,12"
                    BorderBrush="{StaticResource Outline}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Console" 
                                                     Width="20" Height="20"
                                                     Foreground="{StaticResource OnPrimaryContainer}"
                                                     Margin="0,0,8,0"/>
                            <TextBlock Text="量子事件日志" 
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{StaticResource OnSurface}"/>
                        </StackPanel>
                        <TextBlock Text="系统事件与安全审计" 
                                   Style="{StaticResource ValueLabel}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Style="{StaticResource OutlinedButton}" 
                                Content="自动滚动"
                                Padding="12,6"
                                Margin="0,0,8,0"/>
                        <Button Style="{StaticResource OutlinedButton}" 
                                Content="导出"
                                Padding="12,6"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 日志内容 -->
            <Border Grid.Row="1" 
                    Background="{StaticResource SurfaceVariant}"
                    Padding="12">
                <TextBlock FontFamily="{StaticResource DisplayFont}"
                           FontSize="12"
                           Foreground="{StaticResource OnSurface}">
                    <Run Text="[INFO] " Foreground="{StaticResource OnTertiaryContainer}"/>
                    <Run Text="系统启动完成 - 所有模块初始化成功"/>
                    <LineBreak/>
                    <Run Text="[INFO] " Foreground="{StaticResource OnTertiaryContainer}"/>
                    <Run Text="火核处理器在线 - 操作效率 87.2%"/>
                    <LineBreak/>
                    <Run Text="[WARNING] " Foreground="{StaticResource OnErrorContainer}"/>
                    <Run Text="量子内存使用率达到 99.7% - 接近阈值"/>
                    <LineBreak/>
                    <Run Text="[INFO] " Foreground="{StaticResource OnTertiaryContainer}"/>
                    <Run Text="Ψ稳定度检测 - 当前值 Ψ-3 (优秀)"/>
                    <LineBreak/>
                    <Run Text="[CRITICAL] " Foreground="{StaticResource OnErrorContainer}"/>
                    <Run Text="检测到量子入侵尝试 - 已自动拦截"/>
                </TextBlock>
            </Border>
        </Grid>
    </Border>
</UserControl>
