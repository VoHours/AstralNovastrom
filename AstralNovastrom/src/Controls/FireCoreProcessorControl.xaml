<UserControl x:Class="AstralNovastrom.src.Controls.FireCoreProcessorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="800">
    <Grid Background="#1A1A1A">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 火核处理器-->
        <Grid Grid.Column="0" Margin="5" Background="#2A2A2A">
            <TextBlock Text="Firecore Processor" 
                       FontSize="14" FontWeight="Bold" 
                       Foreground="#FFFFFF" 
                       Margin="10,10,0,0"/>
            <TextBlock Text="Occupancy: 25%" 
                       Foreground="#FFFFFF" 
                       FontSize="10" 
                       Margin="10,30,0,0"/>
            <TextBlock Text="Temperature: 30°C" 
                       Foreground="#FFFFFF" 
                       FontSize="10" 
                       Margin="10,50,0,0"/>
            <TextBlock Text="Core State: One-Core Processing/Running" 
                       Foreground="#FFFFFF" 
                       FontSize="10" 
                       Margin="10,70,0,0"/>
            <TextBlock Text="Status: Normal" 
                       Foreground="#00FF00" 
                       FontSize="10" 
                       Margin="10,90,0,0"/>
        </Grid>

        <!-- 日志和CNC控制台-->
        <Grid Grid.Column="1" Margin="5" Background="#2A2A2A">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 日志 -->
            <Grid Grid.Row="0" Margin="5" Background="#3A3A3A">
                <TextBlock Text="Log" 
                           FontSize="12" FontWeight="Bold" 
                           Foreground="#FFFFFF" 
                           Margin="10,10,0,0"/>
                <TextBlock Text="Displays what actions the current user has performed, as well as other events not caused by the user, such as 'reactor damage'." 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           TextWrapping="Wrap" 
                           Margin="10,30,10,10"/>
            </Grid>

            <!-- CNC控制台-->
            <Grid Grid.Row="1" Margin="5" Background="#3A3A3A">
                <TextBlock Text="CNC Console" 
                           FontSize="12" FontWeight="Bold" 
                           Foreground="#FFFFFF" 
                           Margin="10,10,0,0"/>
                <TextBlock Text="Operation Efficiency: 100%" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,30,0,0"/>
                <TextBlock Text="Reactor Status: OFF" 
                           Foreground="#FF0000" 
                           FontSize="10" 
                           Margin="10,50,0,0"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
