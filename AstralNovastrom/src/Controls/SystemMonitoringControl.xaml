<UserControl x:Class="AstralNovastrom.src.Controls.SystemMonitoringControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid Background="#1A1A1A">
        <TextBlock Text="Equipment" 
                   FontSize="14" FontWeight="Bold" 
                   Foreground="#FFFFFF" 
                   Margin="10,10,0,0"/>
        
        <!-- 设备网格 -->
        <Grid Margin="10,40,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 高效冷却系统 -->
            <Grid Grid.Column="0" Grid.Row="0" Margin="5" Background="#2A2A2A">
                <TextBlock Text="High-efficiency Cooling Device" 
                           FontSize="12" FontWeight="Bold" 
                           Foreground="#FFFFFF" 
                           Margin="10,10,0,0"/>
                <TextBlock Text="Device Temperature: 30°C" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,30,0,0"/>
                <TextBlock Text="CoolingEffect: Poor" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,50,0,0"/>
                <TextBlock Text="OverloadState: OFF" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,70,0,0"/>
                <TextBlock Text="Maintenance: NO" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,90,0,0"/>
                <Ellipse Width="20" Height="20" Fill="#00FF00" Margin="100,90,10,10"/>
            </Grid>

            <!-- 能量收集稳定器-->
            <Grid Grid.Column="1" Grid.Row="0" Margin="5" Background="#2A2A2A">
                <TextBlock Text="Gathering Stabilizer" 
                           FontSize="12" FontWeight="Bold" 
                           Foreground="#FFFFFF" 
                           Margin="10,10,0,0"/>
                <TextBlock Text="Charge/Overload: 30%" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,30,0,0"/>
                <TextBlock Text="StableEffect: Poor" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,50,0,0"/>
                <TextBlock Text="OverloadState: OFF" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,70,0,0"/>
                <TextBlock Text="Maintenance: NO" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,90,0,0"/>
                <Ellipse Width="20" Height="20" Fill="#00FF00" Margin="100,90,10,10"/>
            </Grid>

            <!-- 波动能量转换器-->
            <Grid Grid.Column="2" Grid.Row="0" Margin="5" Background="#2A2A2A">
                <TextBlock Text="VolumetricEnergyConvert" 
                           FontSize="12" FontWeight="Bold" 
                           Foreground="#FFFFFF" 
                           Margin="10,10,0,0"/>
                <TextBlock Text="InputEnergy: 30000" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,30,0,0"/>
                <TextBlock Text="OutputEnergy: 25000" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,50,0,0"/>
                <TextBlock Text="OverloadState: OFF" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,70,0,0"/>
                <TextBlock Text="Maintenance: NO" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,90,0,0"/>
                <Ellipse Width="20" Height="20" Fill="#00FF00" Margin="100,90,10,10"/>
            </Grid>

            <!-- 压力控制设备 -->
            <Grid Grid.Column="0" Grid.Row="1" Margin="5" Background="#2A2A2A">
                <TextBlock Text="PressureControlDevice" 
                           FontSize="12" FontWeight="Bold" 
                           Foreground="#FFFFFF" 
                           Margin="10,10,0,0"/>
                <TextBlock Text="PressureValue: 2000" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,30,0,0"/>
                <TextBlock Text="Degree of Control: 30%" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,50,0,0"/>
                <TextBlock Text="ControlEffect: Poor" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,70,0,0"/>
                <TextBlock Text="OverloadState: OFF" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,90,0,0"/>
                <Ellipse Width="20" Height="20" Fill="#00FF00" Margin="100,90,10,10"/>
            </Grid>

            <!-- 副产品处理设备-->
            <Grid Grid.Column="1" Grid.Row="1" Margin="5" Background="#2A2A2A">
                <TextBlock Text="ByproductTreatmentFacility" 
                           FontSize="12" FontWeight="Bold" 
                           Foreground="#FFFFFF" 
                           Margin="10,10,0,0"/>
                <TextBlock Text="ProcessingProgress: 30%" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,30,0,0"/>
                <TextBlock Text="ProcessingEfficiency: 2500 g/s" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,50,0,0"/>
                <TextBlock Text="OverloadState: OFF" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,70,0,0"/>
                <TextBlock Text="Maintenance: NO" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,90,0,0"/>
                <Ellipse Width="20" Height="20" Fill="#00FF00" Margin="100,90,10,10"/>
            </Grid>

            <!-- 能量存储单元 -->
            <Grid Grid.Column="2" Grid.Row="1" Margin="5" Background="#2A2A2A">
                <TextBlock Text="EnergyStorageUnit" 
                           FontSize="12" FontWeight="Bold" 
                           Foreground="#FFFFFF" 
                           Margin="10,10,0,0"/>
                <TextBlock Text="InputEnergy: 60000 HV" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,30,0,0"/>
                <TextBlock Text="Capacity: 150W/500W" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,50,0,0"/>
                <TextBlock Text="Temperature: 30%" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,70,0,0"/>
                <TextBlock Text="Maintenance: NO" 
                           Foreground="#FFFFFF" 
                           FontSize="10" 
                           Margin="10,90,0,0"/>
                <Ellipse Width="20" Height="20" Fill="#00FF00" Margin="100,90,10,10"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
