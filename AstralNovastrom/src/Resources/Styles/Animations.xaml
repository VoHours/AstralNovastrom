<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <!-- 闪烁动画 -->
  <Storyboard x:Key="BlinkAnimation" RepeatBehavior="Forever">
    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                     From="1"
                     To="0.3"
                     Duration="0:0:0.5"
                     AutoReverse="True"/>
  </Storyboard>
  
  <!-- 脉冲动画 -->
  <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
    <DoubleAnimation Storyboard.TargetProperty="ScaleX"
                     From="1"
                     To="1.05"
                     Duration="0:0:1"
                     AutoReverse="True"/>
    <DoubleAnimation Storyboard.TargetProperty="ScaleY"
                     From="1"
                     To="1.05"
                     Duration="0:0:1"
                     AutoReverse="True"/>
  </Storyboard>
  
  <!-- 滑动动画 -->
  <Storyboard x:Key="SlideInAnimation">
    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                     From="0"
                     To="1"
                     Duration="0:0:0.3"/>
    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                     From="-50"
                     To="0"
                     Duration="0:0:0.3"/>
  </Storyboard>
  
  <!-- 淡入动画 -->
  <Storyboard x:Key="FadeInAnimation">
    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                     From="0"
                     To="1"
                     Duration="0:0:0.5"/>
  </Storyboard>
  
  <!-- 旋转动画 -->
  <Storyboard x:Key="RotateAnimation" RepeatBehavior="Forever">
    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(RotateTransform.Angle)"
                     From="0"
                     To="360"
                     Duration="0:0:3"/>
  </Storyboard>
  
  <!-- 波形动画 -->
  <Storyboard x:Key="WaveformAnimation" RepeatBehavior="Forever">
    <DoubleAnimation Storyboard.TargetProperty="Y1"
                     From="0"
                     To="1"
                     Duration="0:0:1"
                     AutoReverse="True"/>
    <DoubleAnimation Storyboard.TargetProperty="Y2"
                     From="1"
                     To="0"
                     Duration="0:0:1"
                     AutoReverse="True"/>
  </Storyboard>
  
</ResourceDictionary>