<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
  <!-- Material Design 3 主题覆盖 -->
  
  <!-- 颜色主题 -->
  <Color x:Key="PrimaryColor">#FF00C6FF</Color>
  <Color x:Key="SecondaryColor">#FF9D00FF</Color>
  <Color x:Key="TertiaryColor">#FF00FFAA</Color>
  <Color x:Key="ErrorColor">#FFFF5555</Color>
  <Color x:Key="WarningColor">#FFFFAA00</Color>
  <Color x:Key="SuccessColor">#FF00FF88</Color>
  
  <!-- 表面颜色 -->
  <Color x:Key="SurfaceColor">#FF0A0A14</Color>
  <Color x:Key="SurfaceVariantColor">#FF1A1A28</Color>
  <Color x:Key="OutlineColor">#FF3A3A5A</Color>
  
  <!-- 文本颜色 -->
  <Color x:Key="OnPrimaryColor">#FF000000</Color>
  <Color x:Key="OnSecondaryColor">#FF000000</Color>
  <Color x:Key="OnSurfaceColor">#FFE0E0FF</Color>
  
  <!-- 画刷 -->
  <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
  <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
  <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource TertiaryColor}"/>
  <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
  <SolidColorBrush x:Key="SurfaceVariantBrush" Color="{StaticResource SurfaceVariantColor}"/>
  <SolidColorBrush x:Key="OnSurfaceBrush" Color="{StaticResource OnSurfaceColor}"/>
  <SolidColorBrush x:Key="OnSurface" Color="{StaticResource OnSurfaceColor}"/>
  <SolidColorBrush x:Key="OnPrimaryBrush" Color="{StaticResource OnPrimaryColor}"/>
  <SolidColorBrush x:Key="OnSecondaryBrush" Color="{StaticResource OnSecondaryColor}"/>
  <SolidColorBrush x:Key="OutlineBrush" Color="{StaticResource OutlineColor}"/>
  <SolidColorBrush x:Key="Surface" Color="{StaticResource SurfaceColor}"/>
  <SolidColorBrush x:Key="Outline" Color="{StaticResource OutlineColor}"/>
  <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
  <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
  <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
  <!-- 容器色（供子控件兼容 MainWindow 命名） -->
  <SolidColorBrush x:Key="OnPrimaryContainer" Color="#FFA0F0FF"/>
  <SolidColorBrush x:Key="OnSecondaryContainer" Color="#FFE6A0FF"/>
  <SolidColorBrush x:Key="TertiaryContainer" Color="#FF002D1A"/>
  <SolidColorBrush x:Key="OnTertiaryContainer" Color="#FF88FFC8"/>
  <SolidColorBrush x:Key="OutlineVariant" Color="#FF2A2A44"/>

  <!-- 字体 -->
  <FontFamily x:Key="CyberDisplayFont">JetBrains Mono, Consolas, Cascadia Code</FontFamily>
  <FontFamily x:Key="CyberBodyFont">Segoe UI Variable, Segoe UI</FontFamily>
  
  <!-- 形状（Large/Medium 供子控件兼容 MainWindow 命名） -->
  <CornerRadius x:Key="Large">16</CornerRadius>
  <CornerRadius x:Key="Medium">12</CornerRadius>
  <CornerRadius x:Key="ShapeExtraSmall">4</CornerRadius>
  <CornerRadius x:Key="ShapeSmall">8</CornerRadius>
  <CornerRadius x:Key="ShapeMedium">12</CornerRadius>
  <CornerRadius x:Key="ShapeLarge">16</CornerRadius>
  <CornerRadius x:Key="ShapeExtraLarge">24</CornerRadius>
  <CornerRadius x:Key="ShapeFull">9999</CornerRadius>
  
  <!-- 按钮样式 -->
  <Style x:Key="MaterialDesignFilledButton" TargetType="Button">
    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource OnPrimaryBrush}"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="24,12"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontWeight" Value="Medium"/>
    <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="{StaticResource ShapeFull}"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Grid>
            <Border x:Name="BackgroundBorder"
                    Background="{TemplateBinding Background}"
                    CornerRadius="{TemplateBinding materialDesign:ButtonAssist.CornerRadius}">
              <ContentPresenter x:Name="ContentPresenter"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="{TemplateBinding Padding}"/>
            </Border>
          </Grid>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="BackgroundBorder" Property="Opacity" Value="0.8"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter TargetName="BackgroundBorder" Property="Opacity" Value="0.6"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  
  <!-- 日志样式 -->
  <Style x:Key="LogEntryBase" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource CyberDisplayFont}"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="Margin" Value="0,2"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>
  
  <Style x:Key="LogInfo" TargetType="TextBlock" BasedOn="{StaticResource LogEntryBase}">
    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
  </Style>
  
  <Style x:Key="LogWarning" TargetType="TextBlock" BasedOn="{StaticResource LogEntryBase}">
    <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
    <Setter Property="Effect">
      <Setter.Value>
        <DropShadowEffect Color="#80FFAA00" BlurRadius="10" ShadowDepth="0"/>
      </Setter.Value>
    </Setter>
  </Style>
  
  <Style x:Key="LogCritical" TargetType="TextBlock" BasedOn="{StaticResource LogEntryBase}">
    <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
    <Setter Property="Effect">
      <Setter.Value>
        <DropShadowEffect Color="#80FF5555" BlurRadius="15" ShadowDepth="0"/>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>