<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <!-- 全息效果画刷（HoloGradient 为 MainWindow 命名兼容） -->
  <LinearGradientBrush x:Key="HoloGradient" StartPoint="0,0" EndPoint="1,0">
    <GradientStop Color="#2000C6FF" Offset="0"/>
    <GradientStop Color="#409D00FF" Offset="0.5"/>
    <GradientStop Color="#2000C6FF" Offset="1"/>
  </LinearGradientBrush>
  <LinearGradientBrush x:Key="HoloGradientBrush" StartPoint="0,0" EndPoint="1,0">
    <GradientStop Color="#2000C6FF" Offset="0"/>
    <GradientStop Color="#409D00FF" Offset="0.5"/>
    <GradientStop Color="#2000C6FF" Offset="1"/>
  </LinearGradientBrush>
  
  <!-- 全息边框 -->
  <LinearGradientBrush x:Key="HoloBorderBrush" StartPoint="0,0" EndPoint="1,1">
    <GradientStop Color="#8000C6FF" Offset="0"/>
    <GradientStop Color="#809D00FF" Offset="0.5"/>
    <GradientStop Color="#8000FFAA" Offset="1"/>
  </LinearGradientBrush>
  
  <!-- 全息发光 -->
  <RadialGradientBrush x:Key="HoloGlowBrush" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
    <GradientStop Color="#4000C6FF" Offset="0"/>
    <GradientStop Color="#00000000" Offset="1"/>
  </RadialGradientBrush>
  
  <!-- 全息按钮 -->
  <LinearGradientBrush x:Key="HoloButtonBrush" StartPoint="0,0" EndPoint="0,1">
    <GradientStop Color="#3000C6FF" Offset="0"/>
    <GradientStop Color="#209D00FF" Offset="1"/>
  </LinearGradientBrush>
  
  <!-- 全息文本 -->
  <LinearGradientBrush x:Key="HoloTextBrush" StartPoint="0,0" EndPoint="1,0">
    <GradientStop Color="#FF00C6FF" Offset="0"/>
    <GradientStop Color="#FF9D00FF" Offset="1"/>
  </LinearGradientBrush>
  
</ResourceDictionary>